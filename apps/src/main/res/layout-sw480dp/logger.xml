<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/sub_bkg"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/sub_bkg2" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/logger_bkg"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:gravity="left"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="138dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/logger_text_no"
                    android:textColor="@android:color/white"
                    android:textSize="30sp" />

                <TextView
                    android:layout_width="612dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/logger_text_data"
                    android:textColor="@android:color/white"
                    android:textSize="30sp" />

                <TextView
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/logger_text_ts"
                    android:textColor="@android:color/white"
                    android:textSize="30sp" />
            </LinearLayout>

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp" >

                <TableRow
                    android:id="@+id/logger_data_0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/logger_btn_data"
                    android:gravity="left" >

                    <TextView
                        android:id="@+id/logger_data_idx_0"
                        android:layout_width="138dp"
                        android:layout_height="64dp"
                        android:gravity="center"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/logger_data_data_0"
                        android:layout_width="580dp"
                        android:layout_height="64dp"
                        android:layout_marginLeft="16dp"
                        android:gravity="left|center"
                        android:singleLine="true"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/logger_data_ts_0"
                        android:layout_width="220dp"
                        android:layout_height="64dp"
                        android:layout_marginLeft="8dp"
                        android:gravity="center"
                        android:textSize="24sp" />
                </TableRow>

                <TableRow
                    android:id="@+id/logger_data_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/logger_btn_data"
                    android:gravity="left" >

                    <TextView
                        android:id="@+id/logger_data_idx_1"
                        android:layout_width="138dp"
                        android:layout_height="64dp"

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/main_bkg"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" >

        <com.dnake.widget.Button2
            android:id="@+id/main_btn_logger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/main_btn_logger"
            android:gravity="bottom|center"
            android:text="@string/main_btn_logger"
            android:textColor="#FFFFFF"
            android:textSize="28sp" />

        <com.dnake.widget.Button2
            android:id="@+id/main_btn_apps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="240dp"
            android:background="@drawable/main_btn_apps"
            android:gravity="bottom|center"
            android:text="@string/main_btn_apps"
            android:textColor="#FFFFFF"
            android:textSize="28sp" />

        <com.dnake.widget.Button2
            android:id="@+id/main_btn_cook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="480dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/main_btn_cook"
            android:gravity="bottom|center"
            android:text="@string/main_btn_cook"
            android:textColor="#FFFFFF"
            android:textSize="28sp" />

        <com.dnake.widget.Button2
            android:id="@+id/main_btn_mall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="240dp"
            android:background="@drawable/main_btn_mall"
            android:gravity="bottom|center"
            android:text="@string/main_btn_mall"
            android:textColor="#FFFFFF"
            android:textSize="28sp" />

        <com.dnake.widget.Button2
            android:id="@+id/main_btn_stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="300dp"
            android:background="@drawable/main_btn_stock"
            android:gravity="bottom|center"
            android:text="@string/main_btn_stock"
            android:textColor="#FFFFFF"
            android:textSize="28sp" />

        <com.dnake.widget.Button2
            android:id="@+id/main_btn_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="460dp"
            android:layout_marginTop="240dp"
            android:background="@drawable/main_btn_map"
            android:gravity="bottom|center"
            android:text="@string/main_btn_map"
            android:textColor="#FFFFFF"
            android:textSize="28sp" />
    </RelativeLayout>
</RelativeLayout>
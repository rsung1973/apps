                        android:textSize="14sp" />
                </TableRow>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="bottom|center"
                    android:orientation="horizontal" >

                    <com.dnake.widget.Button2
                        android:id="@+id/logger_btn_up"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="30dp"
                        android:background="@drawable/logger_btn_up" />

                    <com.dnake.widget.Button2
                        android:id="@+id/logger_btn_down"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="80dp"
                        android:background="@drawable/logger_btn_down" />

                    <com.dnake.widget.Button2
                        android:id="@+id/logger_btn_del"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="80dp"
                        android:background="@drawable/logger_btn_del" />
                </LinearLayout>
            </TableLayout>
        </LinearLayout>
    </RelativeLayout>


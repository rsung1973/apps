<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/sub_bkg"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/sub_bkg2" >

        <LinearLayout
            android:layout_width="464dp"
            android:layout_height="258dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/logger_bkg"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:gravity="left"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="@string/logger_text_no"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="292dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/logger_text_data"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/logger_text_ts"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp" >

                <TableRow
                    android:id="@+id/logger_data_0"
                    android:layout_width="472dp"
                    android:layout_height="wrap_content"
                    android:gravity="left" >

                    <TextView
                        android:id="@+id/logger_data_idx_0"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/logger_data_data_0"
                        android:layout_width="288dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:gravity="left|center"
                        android:singleLine="true"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/logger_data_ts_0"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:gravity="center"
                        android:textSize="14sp" />
                </TableRow>
                <TableRow
                    android:id="@+id/logger_data_1"
                    android:layout_width="472dp"
                    android:layout_height="wrap_content"
                    android:gravity="left" >

                    <TextView
                        android:id="@+id/logger_data_idx_1"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/logger_data_data_1"
                        android:layout_width="288dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:gravity="left|center"
                        android:singleLine="true"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/logger_data_ts_1"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:gravity="center"
                        android:textSize="14sp" />
                </TableRow>
                <TableRow
                    android:id="@+id/logger_data_2"
                    android:layout_width="472dp"
                    android:layout_height="wrap_content"
                    android:gravity="left" >

                    <TextView
